<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_margin="10dp"
    android:background="@drawable/icon_recycler_bg"
    android:id="@+id/linearLayout">

    <FrameLayout

        android:id="@+id/categoryFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/hiddenIDM"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/hiddenImageLinkM"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/mealplanImage"
            android:src="@drawable/app_icon"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:padding="0dp"/>

        <TextView
            android:id="@+id/mealplanText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/orange_overlay"
            android:layout_margin="0dp"
            android:paddingBottom="10dp"
            android:textColor="@color/grey"
            android:paddingStart="7dp"
            android:text="Recipe Title"
            android:textSize="20sp" />

    </FrameLayout>

</LinearLayout>